generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ticket {
  id Int @id @unique @default(autoincrement())

  channelId  String           @unique
  author     String
  subscribed String[]
  claimedBy  String?
  category   TicketCategories @default(Other)

  runId String? // used for checking if ticket has been scheduled to close

  closed Boolean @default(false)
}

model Snippet {
  id Int @id @unique @default(autoincrement())

  identifier String @unique
  content    String
}

enum TicketCategories {
  Other
  PR
  ThreeDLogo
  Livery
  Uniform
}
